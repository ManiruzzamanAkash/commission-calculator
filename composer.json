{
    "name": "akash/commission-calculator",
    "description": "Commission task calculator",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.11",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
